/* pages/mine/index/index.wxss */

.top-box {
  width: 100%;
  height: 300rpx;
}

.content-box {
  width: 100%;
}

.content-box .item-box-row {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-bottom: 18rpx;
}

.content-box .item-box-row .item {
  width: 50%;
  height: 85rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  border-top: 2rpx solid #f6f6f6;
  align-items: center;
}

.content-box .item-box-row .item:nth-of-type(1),
.content-box .item-box-row .item:nth-of-type(2) {
  border: 0rpx;
}

.content-box .item-box-row .item:nth-of-type(odd) {
  border-right: 2rpx solid #f6f6f6;
}

.content-box .item-box {
  margin-bottom: 18rpx;
  display: flex;
  flex-direction: column;
}

.content-box .item-box .item {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-top: 2rpx solid #f6f6f6;
}

.content-box .item-box .item icon.arrow {
}

.content-box .item-box .item:first-of-type {
  border: 0rpx;
}

.content-box .item-box .item text {
  flex-basis: 80%;
}

.content-box .item image {
  width: 42rpx;
  height: 42rpx;
  margin: 0 30rpx;
}
