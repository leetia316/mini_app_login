
.tab-bar {
  width: 100%;
  height: 100rpx;
  border-top: 2rpx solid #e5e5e5;
  background: #fff;
  position: fixed;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
}

.tab-bar .item {
  width: auto;
  height: 100%;
  font-size: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tab-bar .item.active {
  color: #3296fa;
}

.tab-bar .item image {
  width: 38rpx;
  height: 38rpx;
  margin-bottom: 8rpx;
}